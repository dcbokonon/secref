---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
<style>
  .hero {
    text-align: center;
    margin: 40px 0 60px 0;
  }
  .tagline {
    color: #666;
    font-size: 14px;
    margin-bottom: 30px;
  }
  .directory {
    max-width: 1000px;
    margin: 60px auto;
  }
  .section {
    margin-bottom: 30px;
    border: 1px solid #333;
    background: #0a0a0a;
  }
  .section-header {
    display: flex;
    align-items: center;
    padding: 15px 20px;
    cursor: pointer;
    user-select: none;
    border-bottom: 1px solid #333;
  }
  .section-header:hover {
    background: #111;
  }
  .section-title {
    color: #0ff;
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    flex: 1;
  }
  .section-desc {
    color: #666;
    font-size: 13px;
    margin-right: 20px;
  }
  .section-count {
    color: #666;
    font-size: 14px;
    margin-right: 20px;
  }
  .toggle-icon {
    color: #0f0;
    font-size: 14px;
    font-family: monospace;
  }
  .section-content {
    display: none;
    padding: 20px;
  }
  .section-intro {
    color: #999;
    font-size: 13px;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid #222;
  }
  .toggle-checkbox {
    display: none;
  }
  .toggle-checkbox:checked ~ .section-content {
    display: block;
  }
  .toggle-checkbox:checked ~ .section-header .toggle-icon::before {
    content: "[-]";
  }
  .toggle-checkbox:not(:checked) ~ .section-header .toggle-icon::before {
    content: "[+]";
  }
  .tools-tree {
    font-size: 13px;
    line-height: 1.8;
  }
  .tool-group {
    margin-bottom: 30px;
  }
  .tool-group-title {
    color: #0ff;
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 15px;
    padding-bottom: 8px;
    border-bottom: 2px solid #333;
  }
  .tool-category {
    margin-left: 20px;
    margin-bottom: 20px;
  }
  .tool-category-title {
    color: #0f0;
    font-weight: bold;
    margin-bottom: 8px;
  }
  .tool-category-title::before {
    content: "▸ ";
    color: #666;
  }
  .tool-list {
    margin-left: 20px;
    list-style: none;
    padding: 0;
  }
  .tool-list li {
    position: relative;
    padding-left: 15px;
    margin-bottom: 3px;
  }
  .tool-list li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: #666;
  }
  .tool-list a {
    color: #999;
    text-decoration: none;
  }
  .tool-list a:hover {
    color: #0f0;
  }
  .count {
    color: #666;
    font-size: 12px;
    margin-left: 5px;
  }
  .footer-stats {
    text-align: center;
    color: #666;
    font-size: 12px;
    margin: 60px 0 40px 0;
    padding-top: 40px;
    border-top: 1px solid #333;
  }
</style>

<div class="hero">
  <div class="tagline">The cybersecurity resource directory. No BS.</div>
</div>

