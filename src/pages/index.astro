<BaseLayout title="Home">
<style>
  .hero {
    text-align: center;
    margin: 40px 0 60px 0;
  }
  .tagline {
    color: #666;
    font-size: 14px;
    margin-bottom: 30px;
  }
  .search-box {
    width: 100%;
    max-width: 600px;
    padding: 15px 20px;
    font-size: 16px;
    border: 2px solid #0f0;
    background: #000;
    color: #0f0;
    font-family: monospace;
    margin: 0 auto;
    display: block;
  }
  .search-box:focus {
    outline: none;
    border-color: #0ff;
    box-shadow: 0 0 10px rgba(0, 255, 0, 0.3);
  }
  .directory {
    max-width: 1200px;
    margin: 60px auto;
  }
  .section {
    margin-bottom: 30px;
    border: 1px solid #333;
    background: #0a0a0a;
  }
  .section-header {
    display: flex;
    align-items: center;
    padding: 15px 20px;
    cursor: pointer;
    user-select: none;
    border-bottom: 1px solid #333;
  }
  .section-header:hover {
    background: #111;
  }
  .section-title {
    color: #0ff;
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    flex: 1;
  }
  .section-desc {
    color: #666;
    font-size: 13px;
    margin-right: 20px;
  }
  .section-count {
    color: #666;
    font-size: 14px;
    margin-right: 20px;
  }
  .toggle-icon {
    color: #0f0;
    font-size: 14px;
    font-family: monospace;
  }
  .section-content {
    display: none;
    padding: 20px;
  }
  .section-intro {
    color: #999;
    font-size: 13px;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid #222;
  }
  .toggle-checkbox {
    display: none;
  }
  .toggle-checkbox:checked ~ .section-content {
    display: block;
  }
  .toggle-checkbox:checked ~ .section-header .toggle-icon::before {
    content: "[-]";
  }
  .toggle-checkbox:not(:checked) ~ .section-header .toggle-icon::before {
    content: "[+]";
  }
  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
  }
  .category {
    font-size: 13px;
  }
  .category > a {
    color: #0f0;
    font-weight: bold;
    text-decoration: none;
    display: block;
    margin-bottom: 10px;
    padding-bottom: 5px;
    border-bottom: 1px solid #222;
  }
  .category > a:hover {
    color: #0ff;
  }
  .subcategory-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .subcategory-list li {
    padding: 3px 0;
    padding-left: 15px;
    position: relative;
  }
  .subcategory-list li::before {
    content: "â†’";
    position: absolute;
    left: 0;
    color: #666;
  }
  .subcategory-list a {
    color: #999;
    text-decoration: none;
  }
  .subcategory-list a:hover {
    color: #0f0;
  }
  .count {
    color: #666;
    font-size: 12px;
    margin-left: 5px;
  }
  .footer-stats {
    text-align: center;
    color: #666;
    font-size: 12px;
    margin: 60px 0 40px 0;
    padding-top: 40px;
    border-top: 1px solid #333;
  }
</style>

