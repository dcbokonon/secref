# SecRef npm configuration
# Enforce exact versions and security

# Save exact versions
save-exact=true

# Disable package locks from being published
package-lock=true

# Audit on install
audit-level=moderate

# Strict SSL
strict-ssl=true

# Registry
registry=https://registry.npmjs.org/

# Fund warnings off
fund=false

# Engine strict mode (enforce Node version)
engine-strict=true

# Disable scripts on install for security
ignore-scripts=false

# Production install settings
production=false